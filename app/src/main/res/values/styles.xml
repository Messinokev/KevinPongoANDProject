<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewSimple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarView">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">340dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:firstDayOfWeek">2</item>
        <item name="android:maxDate">12/31/2049</item>
        <item name="android:minDate">03/01/2021</item>
    </style>

    <style name="pricesCreateBudget">
        <item name="android:maxLength">6</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="warningTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>



